<h1 class="text-center">
	Listado de Quizes
</h1>
<div class="col-md-4 col-md-offset-8">

	<form action="/quizes" method="get" class="form-inline form-search" role="form">
		
		<div class="form-group">
			<input type="text" name="search" class="form-control" id="" placeholder="Buscar">
		</div>

		<button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
	</form>	
</div>

<div class="lista_quizes">
	<div class="col-md-6 col-md-offset-3">
		
		<%
			if(quizes != 0){
		%>

		<div class="list-group">
			<% for(var i = 0;i<quizes.length;i++){%>
				<a href="/quizes/<%=quizes[i].id%>" class="list-group-item primary"><%=quizes[i].pregunta%></a>
			<%}%>
		</div>
		<%}else{%>
			<h2 class="text-center">No se encontraron resultados para la b√∫squda</h2>
		<%}%>		
	</div>
</div>
